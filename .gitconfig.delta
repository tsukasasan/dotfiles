# Delta configuration for git
# Include this in your .gitconfig with:
#   [include]
#       path = ~/.gitconfig.delta

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = Dracula

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
